function esriAuthentication() {
  const info = new OAuthInfo({
    appId: "",
    portalUrl: "",
    popup: false,
  });
  esriId.registerOAuthInfos([info]);
  const checkSignIn = esriId.checkSignInStatus(info.portalUrl + '/sharing');
  checkSignIn.then((signInEvt: Credential) => {
    console.log('User signed in', signInEvt, signInEvt.userId);
    createMap();
  })
    .catch((e: Error) => {
      console.log('User not signed in', e);
      esriId
        .getCredential(info.portalUrl + '/sharing', {
          oAuthPopupConfirmation: false,
        })
        .then((signInEvt: Credential) => {
          console.log('User signed in', signInEvt, signInEvt.userId);
          createMap();
        });
    });
}
